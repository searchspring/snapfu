{
	"name": "snapfu",
	"version": "1.7.0",
	"author": "searchspring",
	"license": "MIT",
	"description": "Command line interface for Snap!",
	"main": "src/index.js",
	"type": "module",
	"prettier": "@searchspring/prettier",
	"bin": {
		"snapfu": "bin/snapfu.js"
	},
	"scripts": {
		"build:metrics": "node ./metrics/generate.mjs",
		"clean": "rm -rf ./node_modules && rm ./package-lock.json",
		"commit": "cz",
		"test": "jest",
		"test:watch": "jest --watch",
		"format": "prettier --write src *.json",
		"format-check": "prettier --check src *.json",
		"prepare": "husky",
		"version": "standard-version -a",
		"postversion": "git push && git push --tags",
		"snapfu": "./bin/snapfu.js"
	},
	"lint-staged": {
		"./package.json": [
			"prettier --write"
		],
		"./src/**/*.js": [
			"prettier --write"
		]
	},
	"dependencies": {
		"@octokit/rest": "^20.0.2",
		"arg": "^5.0.2",
		"chalk": "^4.1.2",
		"deepmerge": "^4.3.1",
		"glob": "^9.3.5",
		"inquirer": "^8.2.4",
		"libsodium-wrappers": "^0.7.13",
		"ncp": "^2.0.0",
		"node-fetch": "^2.7.0",
		"open": "^8.4.2",
		"replacestream": "^4.0.3",
		"yaml": "^2.4.1"
	},
	"devDependencies": {
		"@babel/plugin-transform-runtime": "^7.24.0",
		"@babel/preset-env": "^7.24.0",
		"@searchspring/prettier": "^1.0.2",
		"cz-conventional-changelog": "^3.3.0",
		"find-free-port": "^2.0.0",
		"fs-extra": "^11.2.0",
		"husky": "^9.0.11",
		"jest": "^29.7.0",
		"lint-staged": "^15.2.2",
		"memorystream": "^0.3.1",
		"prettier": "^3.2.5",
		"standard-version": "^9.5.0",
		"temp-dir": "^2.0.0"
	},
	"config": {
		"commitizen": {
			"path": "./node_modules/cz-conventional-changelog"
		}
	}
}
