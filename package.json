{
	"name": "snapfu",
	"version": "1.0.28",
	"author": "searchspring",
	"license": "MIT",
	"description": "Command line interface for Snap!",
	"main": "src/index.js",
	"type": "module",
	"prettier": "@searchspring/prettier",
	"bin": {
		"snapfu": "bin/snapfu.js"
	},
	"scripts": {
		"build:metrics": "node ./metrics/generate.mjs",
		"commit": "cz",
		"test": "jest",
		"test:watch": "jest --watch",
		"format": "prettier --write src *.json",
		"format-check": "prettier --check src *.json",
		"prepare": "husky install",
		"version": "standard-version -a",
		"postversion": "git push && git push --tags"
	},
	"lint-staged": {
		"./package.json": [
			"prettier --write"
		],
		"./src/**/*.js": [
			"prettier --write"
		]
	},
	"dependencies": {
		"@octokit/rest": "^18.10.0",
		"arg": "^5.0.1",
		"chalk": "^4.1.2",
		"esm": "^3.2.25",
		"git-clone": "^0.1.0",
		"inquirer": "^8.1.2",
		"ncp": "^2.0.0",
		"node-fetch": "^2.6.1",
		"open": "^8.2.1",
		"replacestream": "^4.0.3",
		"tweetsodium": "^0.0.5",
		"yaml": "^2.1.1"
	},
	"devDependencies": {
		"@babel/plugin-transform-runtime": "^7.15.0",
		"@babel/preset-env": "^7.15.0",
		"@searchspring/prettier": "^1.0.2",
		"cz-conventional-changelog": "^3.3.0",
		"find-free-port": "^2.0.0",
		"fs-extra": "^10.0.0",
		"husky": "^7.0.2",
		"jest": "^27.1.0",
		"lint-staged": "^11.1.2",
		"memorystream": "^0.3.1",
		"prettier": "^2.3.2",
		"request-promise": "^4.2.6",
		"standard-version": "^9.3.1",
		"temp-dir": "^2.0.0"
	},
	"config": {
		"commitizen": {
			"path": "./node_modules/cz-conventional-changelog"
		}
	}
}
